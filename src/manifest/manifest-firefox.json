{
  "name": "WikiTree Browser Extension",
  "description": "The official WikiTree browser extension.",

  "version": "1.14",
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "https://*.wikitree.com/*",
    "https://wikitreebee.com/*",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.wikitree.com/*"],
      "js": ["js/vendor.js", "js/content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "images/*",
    "features/wtPlus/templatesExp.json",
    "features/darkMode/darkMode.css",
    "js/*.js"
  ],
  "icons": {
    "128": "images/we128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "in.fo@wikitree.com"
    }
  },
  "browser_action": {
    "default_icon": {
      "128": "images/we128.png"
    },
    "default_title": "WikiTree Browser Extension",
    "default_popup": "options.html"
  }
}
